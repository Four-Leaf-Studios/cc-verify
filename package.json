{
  "name": "@four-leaf-studios/cc-verify",
  "version": "0.0.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && vite build && npm run build:types",
    "preview": "vite preview",
    "test": "vitest run",
    "clean": "rimraf dist",
    "build:types": "tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@vitest/coverage-v8": "^3.2.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Four-Leaf-Studios/cc-verify"
  },
  "homepage": "https://github.com/four-leaf-studios/cc-verify#readme",
  "bugs": {
    "url": "https://github.com/four-leaf-studios/cc-verify/issues"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./brands": {
      "import": "./dist/brands.es.js",
      "require": "./dist/brands.cjs.js",
      "types": "./dist/types/brands.d.ts"
    },
    "./verify": {
      "import": "./dist/verify.es.js",
      "require": "./dist/verify.cjs.js",
      "types": "./dist/types/ccVerify.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
